{{tuppi-fonts}}

{{#with (get this.tuppi.slidesets this.slideset) as |slideset|}}
  {{#with (get slideset this.slide) as |slide|}}
    {{#with (get slide stepGetter) as |step|}}
      {{component (concat 'slide-' slide.type) slide=step}}
    {{/with}}
  {{/with}}
{{/with}}

{{#if previousLink}}
  {{#component previousLink class='tuppi__previous'}}{{/component}}
{{/if}}

{{#if nextLink}}
  {{#component nextLink class='tuppi__next'}}{{/component}}
{{/if}}
